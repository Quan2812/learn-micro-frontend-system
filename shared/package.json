{
  "name": "shared-lib",
  "version": "1.0.0",
  "description": "Shared library for micro frontend system",
  "sideEffects": false,
  "scripts": {
    "build": "ng-packagr -p ng-package.json",
    "build:watch": "ng-packagr -p ng-package.json --watch",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "start": "webpack serve --port 4203",
    "serve:shared": "webpack serve --port 4203"
  },
  "keywords": ["angular", "microfrontend", "shared"],
  "author": "Micro Frontend Team",
  "license": "MIT",

  "dependencies": {
    "tslib": "^2.6.2"
  },

  "devDependencies": {
    "ng-packagr": "^18.2.0",
    "typescript": "~5.5.0",
    "rimraf": "^3.0.2",
    "@angular/compiler": "^18.2.0",
    "@angular/compiler-cli": "^18.2.0",
    "@angular-architects/module-federation": "^18.0.0",
    "@module-federation/enhanced": "^0.2.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },

  "peerDependencies": {
    "@angular/common": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/router": "^18.0.0",
    "rxjs": "^7.8.0"
  }
}
